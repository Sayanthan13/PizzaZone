.btn
{
    margin-top: 2rem;
    padding: 1.3rem 4rem;
    font-size: 20px;
    text-transform: capitalize;
    letter-spacing: .1rem;
    font-weight: 500;
    color: #000;
    background:#fff;
    border: none;
    border-radius: .5rem;
    box-shadow:0 2rem 2rem rgba(0,0,0,0.1);
    transition: all .3s ease;
    cursor: pointer;
    outline: none;
}
.btn:hover
{
    background-color: #000;
    box-shadow: 0.2rem  2rem rgba(255,85,94,0.4);
    color: #fff;
    transform: translateY(-1rem);
}

